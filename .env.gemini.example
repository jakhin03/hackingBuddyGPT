# Example configuration for using Google Gemini models with HackingBuddyGPT

# LLM Configuration for Gemini
llm.api_key='your-gemini-api-key'
log_db.connection_string='log_db.sqlite3'

# Connection settings (same as before)
conn.host='enter-the-private-ip-of-some-vm.local'
conn.hostname='the-hostname-of-the-vm-used-for-root-detection'
conn.port=2222

conn.username='bob'
conn.password='secret'
conn.keyfilename=''

# Gemini model configuration
# Available models: gemini-pro, gemini-1.5-pro, gemini-1.5-flash
llm.model='gemini-1.5-flash'
llm.context_size=1048576

max_turns = 20

# RAG configuration for Gemini
rag_database_folder_name = "vetorDB_gemini"
rag_embedding_provider = "gemini"
rag_embedding = "models/embedding-001"
gemini_api_key = 'your-gemini-api-key'
rag_return_token_limit = 1000
